<div class="container-fluid">
  <div class="row">

    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10">

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title"><%=@selectedStudent.name%>的选课列表</h3>
        </div>

        <div class="panel-body">
           <%if @stu_courses.length==0%>
              <div class="panel-title">该同学还未选课</div>
          <%else%>
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>开课学院</th>
              <th>课时/学分</th>
              <th>考试方式</th>
              <th>主讲教师</th>
            </tr>

            <tbody>
            <% @stu_courses.each do |course| %>
                <tr>
                  <% if "#{course.course_code}".length==0 %>
                    <td>等待管理员审核</td>
                  <% else%>
                    <td><%= course.course_code %></td>
                  <% end %>
                  
                  <td><%= link_to course.name, detail_course_url(course) %></td>
                  <td><%= course.teacher.department %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>